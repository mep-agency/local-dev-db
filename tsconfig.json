{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ESNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
